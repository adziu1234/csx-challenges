//cascade
//Disclaimer: This cascade solution does not fulfill all of the checks of the challenge for some reason, failing "cascade should return undefined" even though it does

function cascade(number) {
	// Your code here!
  const workableNumber = number.toString();
  //base con: number is single digit, print the number, return
  if (workableNumber.length === 1){
    console.log(number);
    return;
  } else {
    const shortenedNumString = workableNumber.slice(0, workableNumber.length-1);
    const newNum = parseInt(shortenedNumString);
    //in between printed lines, call the recursion
    console.log(number);
    cascade(newNum);
    console.log(number);
    return;
  }
}



// // Uncomment to test your work!
cascade(111)
// // should print
// /*
// 111
// 11
// 1
// 11
// 111
// */


//Disclaimer: This cascade solution does not fulfill all of the checks of the challenge for some reason, though the checks in the provided IDE all work

  let array = [];
function shuffleCards(topHalf, bottomHalf) {

  //if there's no elements left to either half, return the shuffled array.
  if (!topHalf[0] && !bottomHalf[0]) {
    return array;
  } else if (topHalf[0] || bottomHalf[0]) {
    //if both halves have a first element, push the top then the bottom first element into array
    if(topHalf[0]){
      array.push(topHalf[0]);
    };
    if (bottomHalf[0]){
      array.push(bottomHalf[0]);
    };
    topHalf.splice(0, 1);
    bottomHalf.splice(0, 1);
    return shuffleCards(topHalf, bottomHalf);
  }
}



// UNCOMMENT TO TEST YOUR WORK
